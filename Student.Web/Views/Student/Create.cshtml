@model StudentModel
@{
    ViewData["Title"] = "Create";
}

<h1>Add New Student</h1>
<br />
<form asp-action="Create">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age">Age</label>
        <input class="form-control" asp-for="Age" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Address">Address</label>
        <input class="form-control" asp-for="Address" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="AttendanceTime">AttendanceTime</label>
        <input class="form-control" asp-for="AttendanceTime" />
    </div>
    <input type="submit" value="Submit" class="btn btn-info" />
    <a asp-action="Index" class="btn btn-info-emphasis">To List</a>
</form>
